d2js.fetch = function(params){
	sql{.
		select * from author where 1 = 1
		code{.
			if(params.name){
				sql{. and strpos(name, :name) > 0 .}
			}
		.}
	.}
	
	return this.query(this.orderBy(sql, params._sorts, {id:'asc'}), params, params._page);
}

d2js.modify = function(row, columns){
	$V(row, {
		name : V.notNull,
		email : V.email,
		info : V.attrs(['linkin']),
		'info,linkin': V.shortest(5)
	});
	
	return this.updateRow('author', row, columns);
}

// configure nashorn engine pool size for this page
d2js.configurePagePool = function(config){
	config.maxActive = 20000;
}


